#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    char result[100] = "";
    int i, j, spaceCount = 0;

    printf("Введите строку: ");
    fgets(str, 100, stdin);

    for (i = 0, j = 0; str[i]; i++) {
        if (str[i] != ' ') {
            result[j++] = str[i];
            spaceCount = 0;
        } else {
            spaceCount++;
            if (spaceCount == 1) {
                result[j++] = str[i];
            }
        }
    }

    if (j > 0 && result[j - 1] == ' ') {
        j--;
    }
    result[j] = '\0';

    printf("Результат: %s\n", result);

    return 0;
}
