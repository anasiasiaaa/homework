#include <stdio.h>

int main() {
    char str[100];
    int i, count = 0;

    printf("Введите строку без пробелов: ");
    scanf("%s", str);

    while (str[count] != '\0') {
        count++;
    }

    printf("%s, %s, %s\n", str, str, str);
    printf("Количество символов в строке: %d\n", count);

    return 0;
}
